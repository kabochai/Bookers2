<h2>Books</h2>


<!--user設定予定-->
<div class="container">
  <div class="row">
    <div class="col-lg-4" style="background-color: orange;">
      <h2>User info</h2>

<!--仮-->

      <%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, class: "book_title" %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body, class: "book_body" %>
  </div>

  <div class="actions">
    <%= f.submit "Create Book", class: "submit" %>
  </div>
<% end %>

<!--仮-->

    </div>

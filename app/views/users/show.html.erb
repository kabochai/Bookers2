<div class="container px-5 px-sm-0">
  <div class="row">
    <div class"col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <th>><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <% if @user == current_user %>
        <p><%= link_to "編集", edit_user_path(@user.id) %></p>
      <% end %>

      <div class="row">
        <h2>New book</h2>

      </div>



    </div>



    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Option</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>



  </div>
</div>
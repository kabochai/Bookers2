<div class="container px-5 px-sm-0">
  <div class="row">
    <div class"col-md-3">
      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></td>
          </tr>
          <tr>
            <th>introduction</th>
            <th>><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">
        <% if @user == current_user %>
          <p><%= link_to "編集", edit_user_path(@user.id) %></p>
        <% end %>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book do |f| %>
        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :body %><br>
          <%= f.text_area :body %>
        </div>
        <div class="actions">
          <%= f.submit "Create Book" %>
        </div>
      <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td><%= image_tag @user.get_profile_image(100,100) %><br>
            <%= link_to @user.name, users_path %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if user_signed_in? %>
              <td>Edit</td>
              <td>destroy</td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
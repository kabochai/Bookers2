<h2>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <label for="inputTitle">Title</label>
  <%= f.text_field :title, autofocus: true, id: "inputTitle", placheholer: "Title" %>
  <label for="inputOption">Option</label>
  <%= f.text_area :body, autofocus: true, id: "inputOption", placheholer: "Option" %>
  <%= f.submit "Update Book" %>

  <%= link_to "Show", book_path(@book) %> |  <%= link_to "Back", books_path %>

<% end %>
